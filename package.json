{
	"name": "px2rem",
	"displayName": "px2rem",
	"description": "transfer px to rem",
	"version": "0.0.3",
	"publisher": "qxl",
	"repository": {
		"type": "git",
		"url": "https://github.com/bluceqiu/px2rem.git"
	},
	"engines": {
		"vscode": "^1.41.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:extension.px2rem"
	],
	"main": "./extension.js",
	"icon": "imgs/px2rem_icon.png",
	"contributes": {
		"commands": [{
            "command": "extension.px2rem",
			"title": "transfer px 2 rem"
		}],
		"menus": {
			"editor/context": [
				{
					"when": "resourceExtname == '.scss' || resourceExtname == '.css' || resourceExtname == '.less' || resourceExtname == '.vue'",
					"command": "extension.px2rem",
					"group": "2_modification"
				}
			]
		},
		"configuration": {
			"type": "object",
			"title": "transfer px 2 rem",
			"properties": {
				"config": {
					"type": "object",
					"title": "配置项",
					"properties": {
						"transferRatio": {
							"type": "number",
							"default": true,
							"description": "px 转换为 rem 的基准转换比例"
						}
					}
				}
				
			}
		}
	},
	
	"scripts": {
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.7",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.41.0",
		"eslint": "^6.6.0",
		"glob": "^7.1.5",
		"mocha": "^6.2.2",
		"typescript": "^3.6.4",
		"vscode-test": "^1.2.2"
	}
}
